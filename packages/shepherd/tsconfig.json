{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext", "es5", "es2015", "es2016", "es2017", "es2018"]
  },
  "include": ["src"],
  "exclude": ["dist"]
}
